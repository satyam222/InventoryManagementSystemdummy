@page
@model InventoryManagementSystem.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Product List";
}
<h3>@ViewData["Title"]</h3>
<hr />
<p>
    <a asp-page="Create" class="btn btn-primary">Create</a>
</p>
<table   class="table table-success table-striped table-responsive table-hover">
    <thead class="table-dark" >
        <tr>
            <th>
                @Html.DisplayNameFor(model =>model.Products[0].ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Description)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model !=null && Model.Products.Any())
        {
            @foreach(var product in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(item=>product.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(item => product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(item => product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(item => product.Description)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-itemid="@product.ProductId" class="btn btn-primary">Edit</a>
                        <a asp-page="./Details" asp-route-itemid="@product.ProductId" class="btn btn-success">Detail</a>
                        <a asp-page="./Delete" asp-route-itemid="@product.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                
            }

        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">
                    Products is not their at this Momement !.

                </td>
            </tr>
            
        }
    </tbody>

</table>